    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</head>

<body>

    <nav class="navbar bg-body-tertiary py-3">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="navbar-brand">EventEase</a>
            
            <!-- Search bar in the middle -->
            <form class="d-flex justify-content-center" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
    
           
            <div class="d-flex">
                <!-- <a href="/users/login" class="btn btn-outline-primary me-2">Login</a>
                <a href="/users/register" class="btn btn-primary">Register</a> -->
            </div>
        </div>
    </nav>
    

    
    <div class="jumbotron user_card">
        <div class="container">
            <h1 class="event-title">Discover Exciting Events</h1>
            <p class="event-description">Find and book events near you. Don't miss out on the latest happenings!</p>
            <a class="btn btn-primary btn-lg" href="/users/login" role="button">Explore Events</a>
        </div>
    </div>

    
    <div class="jumbotron admin_card">
        <div class="container">
            <h1 class="event-title">Post Exciting Events</h1>
            <p class="event-description">Effortlessly share and manage events with our intuitive event posting feature, making event organization a breeze.</p>
            <a class="btn btn-primary btn-lg" href="/admins/a_login" role="button">Post Events</a>
        </div>
    </div>

    
    
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
